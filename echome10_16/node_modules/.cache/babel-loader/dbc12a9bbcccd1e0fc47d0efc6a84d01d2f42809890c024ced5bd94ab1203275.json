"input\">\r\n          <el-input\r\n            type=\"text\"\r\n            placeholder=\"请输入业主手机号\"\r\n            v-model=\"userPhone\"\r\n            style=\"width: 80%\"\r\n          >\r\n            <template slot=\"prepend\"\r\n              ><i class=\"el-icon-user-solid\"></i\r\n            ></template>\r\n          </el-input>\r\n        </div>\r\n        <el-button type=\"primary\" style=\"margin-top: 20px\" @click=\"nextStep1\"\r\n          >下一步</el-button\r\n        >\r\n      </div>\r\n      <div v-if=\"step == 2\">\r\n        <el-form\r\n          label-position=\"right\"\r\n          label-width=\"180px\"\r\n          ref=\"petInfo\"\r\n          :model=\"petInfo\"\r\n          style=\"width: 80%; margin-top: 20px\"\r\n          :rules=\"petInfoRules\"\r\n        >\r\n          <el-form-item label=\"业主姓名：\"\r\n            ><span style=\"float: left\">{{\r\n              userinfo.real_name\r\n            }}</span></el-form-item\r\n          >\r\n          <el-form-item prop=\"pet_type\" label=\"宠物类型：\">\r\n            <el-input\r\n              placeholder=\"请输入宠物类型\"\r\n              v-model=\"petInfo.pet_type\"\r\n            ></el-input>\r\n          </el-form-item>\r\n          <el-form-item prop=\"name\" label=\"宠物名称：\">\r\n            <el-input\r\n              placeholder=\"请输入宠物名称\"\r\n              v-model=\"petInfo.name\"\r\n            ></el-input>\r\n          </el-form-item>\r\n          <el-form-item prop=\"sex\" label=\"雌雄：\">\r\n            <el-radio-group\r\n              v-model=\"petInfo.sex\"\r\n              size=\"medium\"\r\n              style=\"float: left\"\r\n            >\r\n              <el-radio border label=\"雌\"></el-radio>\r\n              <el-radio border label=\"雄\"></el-radio\r\n            ></el-radio-group>\r\n          </el-form-item>\r\n          <el-form-item prop=\"photo\" label=\"上传照片：\">\r\n            <el-upload style=\"float: left\" action=\"\">\r\n              <el-button type=\"primary\">点击上传</el-button>\r\n            </el-upload>\r\n          </el-form-item>\r\n          <el-form-item prop=\"coat_color\" label=\"宠物毛色：\">\r\n            <el-input\r\n              v-model=\"petInfo.coat_color\"\r\n              placeholder=\"请输入宠物毛色\"\r\n            ></el-input>\r\n          </el-form-item>\r\n          <el-form-item prop=\"breed\" label=\"宠物品种：\">\r\n            <el-input\r\n              v-model=\"petInfo.breed\"\r\n              placeholder=\"请输入宠物品种\"\r\n            ></el-input>\r\n          </el-form-item>\r\n          <el-form-item prop=\"haveLicense\" label=\"已办理宠物登记证：\">\r\n            <el-switch\r\n              v-model=\"petInfo.haveLicense\"\r\n              style=\"float: left\"\r\n            ></el-switch>\r\n          </el-form-item>\r\n          <template v-if=\"petInfo.haveLicense\">\r\n            <el-form-item prop=\"pet_license\" label=\"证书编号：\">\r\n              <el-input\r\n                v-model=\"petInfo.pet_license\"\r\n                placeholder=\"请输入证书编号\"\r\n              ></el-input>\r\n            </el-form-item>\r\n            <el-form-item prop=\"pet_license_award_at\" label=\"发证日期：\">\r\n              <el-date-picker\r\n                v-model=\"petInfo.pet_license_award_at\"\r\n                type=\"date\"\r\n                placeholder=\"请选择发证日期\"\r\n                format=\"yyyy年MM月dd日\"\r\n                value-format=\"timestamp\"\r\n                style=\"float: left\"\r\n              >\r\n              </el-date-picker>\r\n            </el-form-item>\r\n            <el-form-item prop=\"vacinated_at\" label=\"接种日期\">\r\n              <el-date-picker\r\n                v-model=\"petInfo.vacinated_at\"\r\n                type=\"date\"\r\n                placeholder=\"请选择发证日期\"\r\n                format=\"yyyy年MM月dd日\"\r\n                value-format=\"yyyy-MM-dd\"\r\n                style=\"float: left\"\r\n              >\r\n              </el-date-picker>\r\n            </el-form-item>\r\n            <el-form-item prop=\"