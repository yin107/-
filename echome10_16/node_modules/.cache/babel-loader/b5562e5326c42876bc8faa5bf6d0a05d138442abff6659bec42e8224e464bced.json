l-input\r\n              placeholder=\"请输入宠物名称\"\r\n              v-model=\"petInfo.name\"\r\n            ></el-input>\r\n          </el-form-item>\r\n          <el-form-item prop=\"sex\" label=\"雌雄：\">\r\n            <el-radio-group\r\n              v-model=\"petInfo.sex\"\r\n              size=\"medium\"\r\n              style=\"float: left\"\r\n            >\r\n              <el-radio border label=\"雌\"></el-radio>\r\n              <el-radio border label=\"雄\"></el-radio\r\n            ></el-radio-group>\r\n          </el-form-item>\r\n          <el-form-item prop=\"photo\" label=\"上传照片：\">\r\n            <el-upload style=\"float: left\" action=\"\">\r\n              <el-button type=\"primary\">点击上传</el-button>\r\n            </el-upload>\r\n          </el-form-item>\r\n          <el-form-item prop=\"coat_color\" label=\"宠物毛色：\">\r\n            <el-input\r\n              v-model=\"petInfo.coat_color\"\r\n              placeholder=\"请输入宠物毛色\"\r\n            ></el-input>\r\n          </el-form-item>\r\n          <el-form-item prop=\"breed\" label=\"宠物品种：\">\r\n            <el-input\r\n              v-model=\"petInfo.breed\"\r\n              placeholder=\"请输入宠物品种\"\r\n            ></el-input>\r\n          </el-form-item>\r\n          <el-form-item prop=\"haveLicense\" label=\"已办理宠物登记证：\">\r\n            <el-switch\r\n              v-model=\"petInfo.haveLicense\"\r\n              style=\"float: left\"\r\n            ></el-switch>\r\n          </el-form-item>\r\n          <template v-if=\"petInfo.haveLicense\">\r\n            <el-form-item prop=\"pet_license\" label=\"证书编号：\">\r\n              <el-input\r\n                v-model=\"petInfo.pet_license\"\r\n                placeholder=\"请输入证书编号\"\r\n              ></el-input>\r\n            </el-form-item>\r\n            <el-form-item prop=\"pet_license_award_at\" label=\"发证日期：\">\r\n              <el-date-picker\r\n                v-model=\"petInfo.pet_license_award_at\"\r\n                type=\"date\"\r\n                placeholder=\"请选择发证日期\"\r\n                format=\"yyyy年MM月dd日\"\r\n                value-format=\"timestamp\"\r\n                style=\"float: left\"\r\n              >\r\n              </el-date-picker>\r\n            </el-form-item>\r\n            <el-form-item prop=\"vacinated_at\" label=\"接种日期\">\r\n              <el-date-picker\r\n                v-model=\"petInfo.vacinated_at\"\r\n                type=\"date\"\r\n                placeholder=\"请选择发证日期\"\r\n                format=\"yyyy年MM月dd日\"\r\n                value-format=\"yyyy-MM-dd\"\r\n                style=\"float: left\"\r\n              >\r\n              </el-date-picker>\r\n            </el-form-item>\r\n            <el-form-item prop=\"vaccine_type\" label=\"疫苗类型：\">\r\n              <el-input\r\n                v-model=\"petInfo.vaccine_type\"\r\n                placeholder=\"请输入疫苗类型\"\r\n              ></el-input>\r\n            </el-form-item>\r\n          </template>\r\n        </el-form>\r\n        <el-button @click=\"step--\">上一步</el-button\r\n        ><el-button type=\"primary\">下一步</el-button>\r\n      </div>\r\n      <div v-if=\"step == 3\">\r\n\t<p style=\"font-size:65px;color:green;margin-top:20px;margin-bottom:0px\"><i class=\"el-icon-success\"></i></p>\r\n\t<p style=\"font-size: 25px;\">宠物档案登记成功</p>\r\n\t<div class=\"box\">\r\n\t\t<p>提醒业主按时录入疫苗接种信息。</p>\r\n\t\t<p>遛狗需要纤绳。</p>\r\n\t\t<p>注意公共环境卫生</p>\r\n\t</div>\r\n\t<el-button type=\"primary\">查看宠物信息</el-button>\r\n\t</div>\r\n    </el-card>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport breadCrumb from \"components/breadCrumb\";\r\nexport default {\r\n  components: { breadCrumb },\r\n  data() {\r\n    return {\r\n      userPhone: \"\",\r\n      userinfo: {\r\n        real_name: \"dd\",\r\n      },\r\n      petInfo: {\r\n        pet_type: \"\",\r\n        name: \"\",\r\n        sex: \"\",\r\n        photo: \"\",\r\n        coat_color: \"\",\r\n        breed: \"\",\r\n        haveLicense: undefined,\r\n        pet_license: \"\",\r\n        pet_license_award_at: \"\",\r\n        vaccinated_at: \"\",\r\n        vaccine_type: \"\",\r\n      },\r\n      petInfoRules: {},\r\n      step: 3,\r\n    };\r\n  },\r\n  methods: {\r\n    nextStep1() {\r\n      //首先对userPhone进行校验\r\n      if (!/^1\\d{10}$/.test(this.userPhone)) {\r\n        this.notifyError(\"请输入正确的手机号码\");\r\n      } else {\r\n        //向后端发送请求查询用户信息\r\n        this.$request({\r\n          url: \"/option/owner\",\r\n          method: \"post\",\r\n          data: {\r\n            phone: this.userPhone,\r\n            community_id: this.community_id,\r\n          },\r\n        }).then((res) => {\r\n          //能够查到用户之后，就进入下一个步骤\r\n          this.userinfo = res.data.data;\r\n          this.step++;\r\n        });\r\n      }\r\n    },\r\n  },\r\n  computed: {\r\n    community_id() {\r\n      if (this.$store.getters.getPostInfo.community_list != undefined) {\r\n        return this.$store.getters.getPostInfo.community_list[0].community_id;\r\n      } else {\r\n        return \"1\";\r\n      }\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.info {\r\n  width: 80%;\r\n  height: 100px;\r\n  background-color: #c0dcee;\r\n  margin: 10px auto;\r\n  display: flex;\r\n  justify-content: space-between;\r\n  padding: 0px 10px;\r\n  box-sizing: border-box;\r\n}\r\n.icon {\r\n  width: 40px;\r\n  font-size: 30px;\r\n  text-align: center;\r\n  line-height: 100px;\r\n  margin-right: 10px;\r\n}\r\n\r\n.context {\r\n  text-align: left;\r\n}\r\n.box{\r\n\twidth:80%;\r\n\tmargin:0 auto;\r\n\tbackground-color: rgb(245, 240, 240);\r\n\ttext-align: left;\r\n\tpadding:10px;\r\n\tbox-sizing:border-box\r\n}\r\n</style>\r\n"],"mappings":"AAuJA,OAAAA,UAAA;AACA;EACAC,UAAA;IAAAD;EAAA;EACAE,KAAA;IACA;MACAC,SAAA;MACAC,QAAA;QACAC,SAAA;MACA;MACAC,OAAA;QACAC,QAAA;QACAC,IAAA;QACAC,GAAA;QACAC,KAAA;QACAC,UAAA;QACAC,KAAA;QACAC,WAAA,EAAAC,SAAA;QACAC,WAAA;QACAC,oBAAA;QACAC,aAAA;QACAC,YAAA;MACA;MACAC,YAAA;MACAC,IAAA;IACA;EACA;EACAC,OAAA;IACAC,UAAA;MACA;MACA,iBAAA