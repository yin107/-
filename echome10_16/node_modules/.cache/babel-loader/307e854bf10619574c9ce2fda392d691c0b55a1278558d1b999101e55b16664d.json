{"ast":null,"code":"import navAside from \"./components/nav.vue\";\nimport headerVue from \"./components/header.vue\";\nimport { mapGetters } from \"vuex\";\nexport default {\n  name: \"App\",\n  components: {\n    navAside,\n    headerVue\n  },\n  created() {},\n  computed: {\n    ...mapGetters([\"getUserInfo\", \"getPostInfo\"]),\n    layout() {\n      return this.$route.meta.layout;\n    },\n    headbgcchose() {\n      let color;\n      switch (this.$store.state.headbgc) {\n        case 1:\n          color = \"#fff\";\n          break;\n        case 2:\n          color = \"#545c64\";\n          break;\n        case 3:\n          color = \"skyblue\";\n          break;\n      }\n      return color;\n    }\n  },\n  watch: {\n    $route() {\n      //在首页中刷新页面\n      //判断userinfo里面有没有id信息，如果没有的话就要去想后端发送请求获取userinfo和postinfo信息\n      if (this.getUserInfo.id == undefined && localStorage.getItem(\"token\")) {\n        this.$myrequest({\n          url: \"/user/info\",\n          method: \"get\",\n          headers: {\n            \"Authorization\": localStorage.getItem(\"token\")\n          }\n        }).then(res => {\n          this.$store.commit(\"setUserInfo\", res.data.userInfo);\n          this.$store.commit(\"setPostInfo\", res.data.postInfo);\n        });\n      }\n    }\n  }\n};","map":{"version":3,"names":["navAside","headerVue","mapGetters","name","components","created","computed","layout","$route","meta","headbgcchose","color","$store","state","headbgc","watch","getUserInfo","id","undefined","localStorage","getItem","$myrequest","url","method","headers","then","res","commit","data","userInfo","postInfo"],"sources":["src/views/app/App.vue"],"sourcesContent":["<template>\n  <div id=\"app\">\n    <el-container v-if=\"layout === 'slider'\">\n      <el-aside width=\"200px\">\n        <nav-aside></nav-aside>\n      </el-aside>\n      <el-container>\n        <el-header\n          :style=\"{\n            backgroundColor: headbgcchose,\n            height: '100px',\n    